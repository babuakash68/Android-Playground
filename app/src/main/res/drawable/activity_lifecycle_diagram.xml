<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- onCreate State -->
    <item android:left="16dp" android:top="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#D0EBFF" />
            <stroke android:width="2dp" android:color="#1E88E5" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>

    <!-- onStart State -->
    <item android:left="16dp" android:top="96dp">
        <shape android:shape="rectangle">
            <solid android:color="#DFFFE2" />
            <stroke android:width="2dp" android:color="#43A047" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>

    <!-- onResume State -->
    <item android:left="16dp" android:top="176dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE9C2" />
            <stroke android:width="2dp" android:color="#FB8C00" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>

    <!-- onPause State -->
    <item android:left="16dp" android:top="256dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFDDE7" />
            <stroke android:width="2dp" android:color="#D81B60" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>

    <!-- onStop State -->
    <item android:left="16dp" android:top="336dp">
        <shape android:shape="rectangle">
            <solid android:color="#F3E5F5" />
            <stroke android:width="2dp" android:color="#8E24AA" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>

    <!-- onDestroy State -->
    <item android:left="16dp" android:top="416dp">
        <shape android:shape="rectangle">
            <solid android:color="#ECEFF1" />
            <stroke android:width="2dp" android:color="#546E7A" />
            <corners android:radius="12dp" />
            <size android:width="360dp" android:height="64dp" />
        </shape>
    </item>
</layer-list>
